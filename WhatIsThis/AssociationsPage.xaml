<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WhatIsThis"
             x:Class="WhatIsThis.Views.AssociationsPage">

    <ListView ItemsSource="{Binding Associations}">
    <ListView.ItemTemplate>
        <DataTemplate>
            <ImageCell ImageSource="{Binding Resource}"
                       Text="{Binding Word}" 
                       TextColor="White"
                       Command="{Binding OnAssociationTappedCommand}"/>
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>
</ContentPage>